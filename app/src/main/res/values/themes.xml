<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ModuloDosFirebaseCDI" parent="Theme.ModuloDosFirebaseCDI.Base"/>

    <style name="Theme.ModuloDosFirebaseCDI.Base" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/baseLight</item>
        <item name="colorPrimaryVariant">@color/lighterLight</item>
        <item name="colorOnPrimary">@color/baseGrey</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/baseGrey</item>
        <item name="colorSecondaryVariant">@color/lighterLight</item>
        <item name="colorOnSecondary">@color/baseLight</item>

        <!-- Tucara colors -->
        <item name="colorSurface">?attr/colorSecondary</item>
        <item name="colorOnSurface">?attr/colorOnSecondary</item>

        <item name="android:colorBackground">?attr/colorPrimary</item>



        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="android:ambientShadowAlpha">0.7</item>
        <item name="android:spotShadowAlpha">0.7</item>





        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/Theme.ModuloDosFirebaseCDI.Toolbar</item>






    </style>

    <style name="Theme.ModuloDosFirebaseCDI.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/baseGrey</item>
        <item name="android:elevation">@dimen/shadow_elevation</item>
    </style>
</resources>